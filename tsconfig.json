{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
      "es2017.object",
      "esnext"
    ],
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "downlevelIteration": true
  },
  "exclude": ["node_modules"]
}

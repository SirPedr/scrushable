{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
      "es2017.object",
      "esnext"
    ],
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "rootDirs": ["assets"],
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "config",
    "server/static",
    "assets/js/test",
    "webpack.config.js"
  ]
}
